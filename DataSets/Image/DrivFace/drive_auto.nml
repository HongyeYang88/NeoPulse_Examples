oracle("mode") = "regression"
oracle("generated") = 2

source:
  bind = "training_data.csv" ;
  input:
    x ~ from "Image"
      -> image: [shape=[320, 240], channels=3]
      -> ImageDataGenerator: [rescale= 0.003921568627451] ;
  output:
    y ~ from "Vector"
      -> flat: [4]
      -> FlatDataGenerator: [] ;
  params:
    validation_split = 0.2,
    batch_size = 2 ;

architecture:
  input:  x ~ image: [shape=[320, 240], channels=3] ;
  output: y ~ flat: [4] ;

  x -> auto -> y ;

train:
  compile:
    optimizer = auto,
    loss = auto,
    metrics = ['mae','mse'] ;
  run:
    epochs = 2 ;
  dashboard: ;
